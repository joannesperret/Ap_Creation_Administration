html
    head
        meta(charset="utf-8")
        title Mon application
        link(rel="stylesheet" href="/bootstrap/css/bootstrap.min.css")
        script(src="jquery/jquery.min.js")
        script(src="js/index.js")
    body(class="container-fluid")
        div(class="row justify-content-center mt-4")
            div(class="col-md-8")                
                   
        block content
            div(class="row")
                div(class="col-md-4")
                    h1 Liste des articles
                div(class="col-md-2")
                    a(href="/concerts/addConcert" class="btn btn-primary") Ajouter un produit
            div(class="col-6")
                table(class="table table-bordered")
                    tr
                        th Designation
                        th Description
                        th Prix
                        th Qté stockée
                        th Action
                    each product in productList         
                        tr                            
                            td= product.designation
                            td= product.description
                            td= product.prix
                            td= product.qte_stockee
                            td                                
                                 a(href='/concerts/'+product.id_produit 
                        class="btn btn-danger mb-3 btn-block") Supprimer           